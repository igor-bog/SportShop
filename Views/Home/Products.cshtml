@{
    Layout = null;
    ViewData["Title"] = "Наши товары";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        header {
            background: linear-gradient(to right, #007bff, #0056b3);
            color: white;
            padding: 20px 0;
            text-align: center;
        }

        footer {
            background-color: #343a40;
            color: #ccc;
            padding: 20px 0;
            text-align: center;
            margin-top: 40px;
        }

        .card {
            margin-bottom: 30px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

 .back-btn {
            position: absolute;
            top: 20px;
            left: 20px;
        }

        
          .btn-secondary {
            background-color: red; /* Красный фон */
            border: none;
            color: white; /* Белый текст */
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            text-decoration: none;
        }

        .btn-secondary:hover {
            background-color: darkred; /* Тёмно-красный при наведении */
        }

          .btn-third {
            background-color: rgba(200, 135, 5, 0.91); /* Красный фон */
            border: none;
            color: white; /* Белый текст */
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            text-decoration: none;
        }

        .btn-third:hover {
            background-color: rgb(221, 152, 5); /* Тёмно-красный при наведении */
        }

        
          .cartitems-btn {
            position: absolute;
            top: 20px;
            right: 20px;
        }

        .card-img-top {
    max-width: 100%;
    height: 200px; /* , 200px  */
    object-fit: contain; /* чтобы изображение не искажалось */
}


    </style>
</head>
<body>
    <header>
        <h1>Добро пожаловать в наш магазин!</h1>
        <p>Откройте для себя лучшие товары по отличным ценам</p>
                <a class="btn btn-third cartitems-btn" href="/Home/Cart">Корзина</a>
        <a class="btn btn-secondary back-btn" href="/Home/Privacy">Назад</a>

    </header>

    <div class="container mt-4">
        <h2 class="text-center mb-4">@ViewData["Title"]</h2>

        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <img src="/images/product1.png" class="card-img-top" alt="Товар 1">
                    <div class="card-body">
                        <h5 class="card-title">Кроссовки Puma </h5>
                        <p class="card-text">Puma MAGNIFY Nitro. Отличное качество, хорошая цена.</p>
                      <form method="post" asp-controller="Cart" asp-action="AddToCart">
    <input type="hidden" name="Id" value="1" />
    <input type="hidden" name="Name" value="Кроссовки Puma" />
    <input type="hidden" name="Description" value="Puma MAGNIFY Nitro. Отличное качество, хорошая цена." />
    <input type="hidden" name="Price" value="100" />
    <input type="hidden" name="ImageUrl" value="/images/product1.png" />
    <button type="submit" class="btn btn-primary">Купить</button>
</form>

                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <img src="/images/product2.png" class="card-img-top" alt="Товар 2">
