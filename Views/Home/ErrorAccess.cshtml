@{
    ViewData["Title"] = "Ошибка доступа";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: #2c3e50;
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            height: 100vh;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            text-align: center;
        }

            .logout-btn {
            position: absolute;
            top: 15px;
            left: 20px;
        }

        
          .btn-secondary {
            background-color: rgba(255, 0, 0, 0.637); /* Красный фон */
            border: none;
            color: white; /* Белый текст */
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            text-decoration: none;
        }

        .btn-secondary:hover {
            background-color: darkred; /* Тёмно-красный при наведении */
        }



    </style>
</head>
<body>
    <h1>Ошибка доступа</h1>
    <p>У вас нет прав для просмотра этой страницы.</p>
   <form asp-controller="Home" asp-action="Logout" method="post" class="d-inline">
    <button type="submit" class="btn logout-btn btn-secondary">Выйти</button>
</form>
</body>
</html>
